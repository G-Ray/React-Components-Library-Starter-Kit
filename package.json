{
  "name": "React-Library-Stater-Kit",
  "version": "1.0.2",
  "description": "Boilerplate to building a React components library for NPM",
  "main": "build/bundle.js",
  "repository": "https://github.com/hqro/React-Library-Stater-Kit.git",
  "author": "Guillaume L. <glarivie@student.42.fr>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "start": "webpack --watch --config config/webpack.config.js",
    "build": "webpack --config config/webpack.config.js",
    "test": "jest --verbose --forceExit",
    "lint": "eslint src/**; exit 0",
    "prepare": "npm run build"
  },
  "peerDependencies": {
    "react": "^16.2.0",
    "react-dom": "^16.2.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.2",
    "babel-jest": "^22.4.1",
    "babel-loader": "^7.1.3",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "css-loader": "^0.28.10",
    "eslint": "^4.18.1",
    "eslint-config-react-app": "^2.1.0",
    "eslint-plugin-flowtype": "^2.46.1",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.7.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^22.4.2",
    "postcss-cssnext": "^3.1.0",
    "postcss-flexbugs-fixes": "^3.3.0",
    "postcss-import": "^11.1.0",
    "postcss-loader": "^2.1.1",
    "postcss-preset-env": "^3.2.1",
    "prepack-webpack-plugin": "^1.1.0",
    "prop-types": "^15.6.1",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-test-renderer": "^16.2.0",
    "webpack": "^3.11.0",
    "webpack-cli": "^2.0.9"
  },
  "optionalDependencies": {
    "fsevents": "^1.1.3"
  },
  "jest": {
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    },
    "moduleNameMapper": {
      "^.+\\.(css|less|scss)$": "identity-obj-proxy"
    }
  }
}
