{
  "name": "React-Components-Library-Starter-Kit",
  "version": "1.0.3",
  "description": "Boilerplate to building a React components library for NPM",
  "main": "dist/main.js",
  "repository": "https://github.com/hqro/React-Components-Library-Starter-Kit.git",
  "author": "Guillaume L. <glarivie@student.42.fr>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "precommit": "lint-staged",
    "storybook": "start-storybook -p 9001 -c .storybook",
    "start": "webpack --watch --config config/webpack.config.js",
    "build": "webpack -p --config config/webpack.config.js",
    "test": "jest --verbose --forceExit",
    "lint": "eslint src/**; exit 0",
    "profile": "webpack -p --config config/webpack.config.js --profile --json > stats.json",
    "analyzer": "webpack-bundle-analyzer stats.json",
    "prepare": "npm run build",
    "clean": "rm -Rvf dist"
  },
  "lint-staged": {
    "*.{js,json}": [
      "prettier --write",
      "git add"
    ]
  },
  "peerDependencies": {
    "react": "^16.4.0",
    "react-dom": "^16.4.0"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^3.4.3",
    "@storybook/addon-info": "^3.4.3",
    "@storybook/react": "^3.4.3",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.2",
    "babel-jest": "^22.4.1",
    "babel-loader": "^7.1.3",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-3": "^6.24.1",
    "classnames": "^2.2.5",
    "css-loader": "^0.28.10",
    "date-fns": "^1.29.0",
    "eslint": "^4.18.1",
    "eslint-config-react-app": "^2.1.0",
    "eslint-plugin-flowtype": "^2.46.1",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.7.0",
    "extract-text-webpack-plugin": "^3.0.2",
    "feather-icons-react": "^0.2.0",
    "husky": "^0.14.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^22.4.2",
    "lint-staged": "^7.0.5",
    "node-sass": "^4.7.2",
    "prettier": "^1.12.1",
    "prop-types": "^15.6.1",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-test-renderer": "^16.2.0",
    "sass-loader": "^6.0.7",
    "style-loader": "^0.20.2",
    "url-loader": "^1.0.1",
    "webpack": "^3.11.0",
    "webpack-bundle-analyzer": "^2.11.1"
  },
  "optionalDependencies": {
    "fsevents": "^1.1.3"
  },
  "jest": {
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    },
    "moduleNameMapper": {
      "^.+\\.(css|less|scss)$": "identity-obj-proxy"
    }
  }
}
